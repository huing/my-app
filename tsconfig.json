{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es5",
    "allowJs": true,
    "strict": true,
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    // tsx 不用import react
    "jsx": "react-jsx",
    "moduleResolution": "node",
    // "noEmit": true, // 不输出文件，只做类型检查
    // "baseUrl": "./",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
